<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Join3"
    android:background="@color/mainPink">

    <ImageView
        android:id="@+id/welcomeBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/welcomebox"
        android:layout_centerInParent="true"
        android:layout_marginRight="82dp"
        android:layout_marginLeft="82dp"/>

    <ImageView
        android:layout_below="@+id/welcomeBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/text_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="37sp"
        android:text="환영합니다"
        android:textColor="#fffff4eb"
        android:fontFamily="@font/notosanscjkkrblack"
        android:layout_centerInParent="true"/>


</RelativeLayout>