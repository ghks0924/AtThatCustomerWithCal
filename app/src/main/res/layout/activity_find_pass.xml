<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_FindPwd"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/topLl"
        android:layout_width="match_parent"
        android:layout_height="76.5dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="14dp"
            android:layout_height="22.5dp"
            android:src="@drawable/revised_backarrow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/joinTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="비밀번호 변경"
            android:fontFamily="@font/notosansmonocjkkrbold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#211f1f"/>

    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/topLl"
        android:background="@color/mainGreyFor30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLl"
        android:orientation="vertical">

    <TextView
        android:id="@+id/IDTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35.5dp"
        android:layout_marginLeft="22dp"

        android:text="가입하신 이메일 계정을 입력하세요"
        android:textColor="@color/mainGrey"
        android:textSize="13sp"
        android:fontFamily="@font/notosanscjkkrmedium"
        />

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="25dp"

        android:background="@drawable/edittext_frame_grey"
        android:textCursorDrawable="@drawable/cursor_edittext"
        android:hint="이메일 주소"
        android:textSize="13sp"
        android:textColorHint="@color/mainGreyFor50"
        android:textColor="@color/mainGrey"
        android:paddingLeft="5dp"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/idTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idEt"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:text="입력하신 메일주소로 비밀번호 변경 메일이 전송됩니다"
            android:textColor="@color/mainGreyFor50"
            android:textSize="12sp"
            android:fontFamily="@font/notosanscjkkrmedium"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"

            android:fontFamily="@font/notosansmonocjkkrbold"
            android:text="비밀번호 변경 이메일 보내기"
            android:textSize="13sp"
            android:textColor="@color/mainGrey"
            android:backgroundTint="@color/mainPink"

            android:stateListAnimator="@null"
            />


    </LinearLayout>



</RelativeLayout>